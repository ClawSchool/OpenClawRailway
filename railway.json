{
  "$schema": "https://railway.app/railway.schema.json",
  "env": {
    "CLAUDE_AI_SESSION_KEY": {
      "description": "Your Claude session key from claude.ai (extract from browser cookies after logging in)",
      "required": false
    },
    "ANTHROPIC_API_KEY": {
      "description": "Alternative: Your Anthropic API key for Claude (from console.anthropic.com)",
      "required": false
    },
    "OPENCLAW_GATEWAY_TOKEN": {
      "description": "Auto-generated token for gateway authentication",
      "default": "${{secret(64)}}"
    },
    "OPENCLAW_GATEWAY_PASSWORD": {
      "description": "Auto-generated password for gateway authentication",
      "default": "${{secret(32)}}"
    }
  },
  "volumes": {
    "/data": {}
  },
  "deploy": {
    "startCommand": "docker-entrypoint.sh openclaw gateway --allow-unconfigured --bind lan --token $OPENCLAW_GATEWAY_TOKEN --password $OPENCLAW_GATEWAY_PASSWORD",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300
  }
}
